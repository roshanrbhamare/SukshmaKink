<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SukshmaLink</title>
    <link rel="stylesheet" href="/style/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div id="top">


        <div id="top-1">
            <a href="/shorten">Create Link</a>
        </div>


        <!-- <div id="top-2"> -->
        <% if(locals.links){ %>
        <div id="top-3">
            <% links.forEach(element => { %>
                <div class="card" id="card">
                    <img src="https://www.google.com/s2/favicons?domain=<%=element.domain%>&sz=128"  alt="ICON">
                    <div class="card-body" id="cardb">
                        <div>
                            <a id="cardt" class="card-title" href="/link/<%= element.shorturl %>">http://localhost:3000/link/<%= element.shorturl %></a>
                        </div>
                      <h5 class="card-text"><%= element.domain %></h5>
                    </div>
                  </div>
            <% }) %>
        </div>
        <% } %>
        <!-- </div> -->
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>